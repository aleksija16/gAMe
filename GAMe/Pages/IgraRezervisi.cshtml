@page
@model GAMe.Pages.IgraRezervisiModel
@{
}


    <div class="rezervacija fadeInDown">
        <div id="formContent">
            <form method="post">
                <label class="form-control select-fit-text">Datum odrzavanja:</label>
                <input type="date" min="@Model.DanasnjiDatum"asp-for="RezervacijaIgre.datum" class="form-control" placeholder="YYYY-MM-DD" required pattern="[0-9]{4}-[0-9]{2}-[0-9]{2}" title="Enter a date in this formart YYYY-MM-DD"/>/>
                <input type="text" asp-for="RezervacijaIgre.trajanje" placeholder="Trajanje" required />


                <div>
                    <button type="submit" class="dugme">Rezerviši turu</button>
                </div>

            </form>
        </div>
    </div>
