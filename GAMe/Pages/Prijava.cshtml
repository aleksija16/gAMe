@page
@model GAMe.Pages.PrijavaModel
@{
}

<form method="post">
    <div class="prijava">
            <input type="text" placeholder="Korisnicko ime" asp-for="TrenutniKorisnik.username">
            <input type="password" placeholder="Lozinka" asp-for="TrenutniKorisnik.password">
            <input type="submit" value="Prijavi se" class="btn-primary" />
            <div class="d-flex justify-content-center links" style="color:white">
                Nemaš nalog?<a href="/Registracija">Registruj se <i class="far fa-id-badge"></i></a>
            </div>
    </div>
</form>

@if (Model.SessionId == -1)
{
    <div style="text-align:center">
        <div class="alert alert-danger" role="alert">
            <i class="fas fa-exclamation-triangle"></i> Uneli ste pogresno korisnicko ime ili lozinku. <i class="fas fa-exclamation-triangle"></i>
        </div>
    </div>
}

